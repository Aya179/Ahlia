@model Ahlia.Models.ClientType

@{
    ViewData["Title"] = "إنشاء نوع المساهم";
}
<div class="card mb-4">
    <div class="card-header" style=" display: flex;
  justify-content: space-between;">
        <a asp-action="Index">
            <i class="fa fa-arrow-left fa-lg"></i>
        </a>
        <p>إنشاء نوع مساهم</p>


    </div>

    <div class="card-body">
        <form asp-action="Create" style=" width: 50vw;  margin: auto;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-4">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="TypeName"> </label>
                        <input type="text" class="form-control" asp-for="TypeName">
                        <span asp-validation-for="TypeName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Notes" class="control-label"></label>
                        <input type="text" asp-for="Notes" class="form-control" />
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>



                <button class="btn btn-primary btn-lg btn-block" type="submit">
                    إضافة نوع مساهم
                </button>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

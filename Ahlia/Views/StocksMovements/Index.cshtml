@model IEnumerable<Ahlia.Models.StocksMovement>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary"><a asp-action="Create">نقل السهم</a></h6>
            </div>
            <div class="table-responsive p-3">
                <div id="dataTableHover_wrapper" class="dataTables_wrapper dt-bootstrap4">
                   
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table align-items-center table-flush table-hover dataTable" id="dataTableHover" role="grid" aria-describedby="dataTableHover_info">
                                <thead class="thead-light">
                                    <tr role="row">
                                        <th style="white-space: nowrap; text-align: center;"> @Html.DisplayNameFor(model => model.Id)</th>
                                        <th style="white-space: nowrap; text-align: center;"> @Html.DisplayNameFor(model => model.MovementType)</th>
                                        <th style="white-space: nowrap; text-align: center;"> @Html.DisplayNameFor(model => model.Description)</th>
                                        <th>
                                        </th>





                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr role="row">
                                            <td style="text-align: center;">
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </td>


                                            <td style="text-align: center;">
                                                @Html.DisplayFor(modelItem => item.MovementType)
                                            </td>
                                            <td style="text-align: center;">
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>



                                            <td style="text-align: center; white-space: nowrap;">
                                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                                                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a> |
                                                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>


                                        </tr>
                                    }



                                </tbody>
                            </table>
                        </div>
                    </div>
                  
                </div>
            </div>
        </div>
    </div>

</div>
    @section Scripts

        {

        <script>



            $(document).ready(function () {
                $('#dataTableHover').DataTable(); // ID From dataTable
                //  $('#dataTableHover').DataTable(); // ID From dataTable with Hover
            });
        </script>
    }

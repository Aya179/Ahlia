@model IEnumerable<Ahlia.Models.Penefit>

@{
    ViewData["Title"] = "الأرباح";
}

<style>
    tr:hover, tr.selected {
        background-color: lightblue;
    }

    td {
        padding: 5px;
    }

    }

    a {
        display: inline-block;
    }

</style>
<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
               
                <a asp-action="Index" >
                    <i class="fa fa-arrow-right fa-lg"></i>
                </a>
                <span>جدول أرباح المساهم</span>
            </div>
            <div class="table-responsive p-3">
                <div id="dataTableHover_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table align-items-center table-flush " id="dataTableHover" role="grid" aria-describedby="dataTableHover_info">
                                <thead class="thead-light">
                                    <tr>

                                        <th style="white-space: nowrap;text-align:center;"> @Html.DisplayNameFor(model => model.ClientId)</th>
                                        <th style="white-space: nowrap;text-align:center;"> ربح السهم</th>
                                        <th style="white-space: nowrap;text-align:center;"> @Html.DisplayNameFor(model => model.CompleteAmount)</th>






                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="text-align: center;">
                                                @Html.DisplayFor(modelItem => item.Client.FirstName)
                                                @Html.DisplayFor(modelItem => item.Client.LastName)
                                            </td>


                                            <td style="text-align: center;">
                                                @Html.DisplayFor(modelItem => item.Price.Shareprice)
                                            </td>
                                            <td style="text-align: center;">
                                                @Html.DisplayFor(modelItem => item.CompleteAmount)
                                            </td>






                                        </tr>
                                    }



                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts

    {
    <script>



        $(document).ready(function () {
            $('#dataTableHover').DataTable(); // ID From dataTable
            //  $('#dataTableHover').DataTable(); // ID From dataTable with Hover
        });
    </script>
      }

